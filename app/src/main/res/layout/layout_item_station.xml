<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_marginBottom="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/padding_extra_medium"
            android:paddingBottom="@dimen/padding_extra_medium">
        <TextView
                android:id="@+id/header_station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/station_name"
                style="@style/HeaderTextStyle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/station_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                tools:text="Station test name"
                style="@style/TextStyle"
                app:layout_constraintTop_toTopOf="@+id/header_station_name"
                app:layout_constraintBottom_toBottomOf="@+id/header_station_name"
                app:layout_constraintStart_toStartOf="@+id/station_address"/>
        <TextView
                android:id="@+id/header_station_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                style="@style/HeaderTextStyle"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/header_station_name"
                app:layout_constraintTop_toBottomOf="@+id/header_station_name"/>
        <TextView
                android:id="@+id/station_address"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                tools:text="Station test address"
                style="@style/TextStyle"
                app:layout_constraintStart_toEndOf="@+id/header_station_address"
                app:layout_constraintTop_toTopOf="@+id/header_station_address"
                android:layout_marginStart="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/header_station_address"/>
        <TextView
                android:id="@+id/header_station_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                style="@style/HeaderTextStyle"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/header_station_address"
                app:layout_constraintTop_toBottomOf="@+id/header_station_address"/>
        <TextView
                android:id="@+id/station_phone_number"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                style="@style/TextStyle"
                app:layout_constraintTop_toTopOf="@+id/header_station_phone_number"
                app:layout_constraintBottom_toBottomOf="@+id/header_station_phone_number"
                app:layout_constraintStart_toStartOf="@+id/station_address"
                tools:text="Station pump's number"/>
        <CheckBox
                android:id="@+id/poll_active_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/poll_active"
                android:checked="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>